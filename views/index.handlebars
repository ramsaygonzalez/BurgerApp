<div class="container">
    <div class="row">
        <div class="col">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Eat-Da-Burger!</h1>
                    <p class="lead">On the left you will find uneaten burgers, click the button to devour one! On the
                        right burgers which have been eaten</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2>Uneaten Burgers</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <form class="create-form">
                <h2>Add New Burgers</h2>
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>

                <button type="submit" class="btn btn-secondary" id="addBtn">Add Burger</button>
            </form>
        </div>
        <div class="col">
            <h2>Eaten Burgers</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>